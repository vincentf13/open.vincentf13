<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="open.vincentf13.exchange.account.infra.persistence.mapper.PlatformAccountMapper">

    <update id="batchUpdateWithOptimisticLock">
        UPDATE platform_accounts
        <trim prefix="SET" suffixOverrides=",">
            <trim prefix="balance = CASE account_id" suffix="END,">
                <foreach collection="list" item="item">
                    WHEN #{item.po.accountId} THEN #{item.po.balance}
                </foreach>
            </trim>
            <trim prefix="version = CASE account_id" suffix="END,">
                <foreach collection="list" item="item">
                    WHEN #{item.po.accountId} THEN #{item.po.version}
                </foreach>
            </trim>
        </trim>
        WHERE
        <foreach collection="list" item="item" separator=" OR ">
            (account_id = #{item.po.accountId} AND version = #{item.expectedVersion})
        </foreach>
    </update>

</mapper>
